{
  "name": "flow-programming-language",
  "displayName": "Flow Programming Language",
  "description": "Language support for Flow programming language with LSP integration",
  "version": "0.1.0",
  "publisher": "flow-lang-team",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flow.showOutputChannel",
        "title": "Show Flow Language Server Output",
        "category": "Flow"
      },
      {
        "command": "flow.restartLanguageServer",
        "title": "Restart Flow Language Server",
        "category": "Flow"
      },
      {
        "command": "flow.runFile",
        "title": "Run Flow File",
        "category": "Flow"
      },
      {
        "command": "flow.checkSyntax",
        "title": "Check Flow Syntax",
        "category": "Flow"
      }
    ],
    "languages": [
      {
        "id": "flow",
        "aliases": [
          "Flow",
          "flow"
        ],
        "extensions": [
          ".flow"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "flow",
        "scopeName": "source.flow",
        "path": "./syntaxes/flow.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "flow-icons",
        "label": "Flow Icons",
        "path": "./icons/flow-icon-theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Flow",
      "properties": {
        "flow.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to the Flow language server executable (flow-lsp). If empty, will search in PATH."
        },
        "flow.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Flow language server."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "flow.runFile",
          "when": "resourceExtname == .flow",
          "group": "navigation"
        },
        {
          "command": "flow.checkSyntax",
          "when": "resourceExtname == .flow",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "flow.runFile",
          "when": "resourceExtname == .flow"
        },
        {
          "command": "flow.checkSyntax",
          "when": "resourceExtname == .flow"
        }
      ]
    }
  },
  "scripts": {
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "glob": "^11.0.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "bundleDependencies": [
    "vscode-languageclient"
  ]
}
